<% title _("Cycle Plans") %>

<% title_actions new_link(_("Create Cycle Plan")) %>

<table class="<%= table_css_classes 'table-fixed' %>">
  <thead>
    <tr>
      <th class="col-md-2"><%= sort :name, as: s_("Cycle Plan|Name") %></th>
      <th class="col-md-3"><%= sort :description, as: _("Description") %></th>
      <th class="col-md-1"><%= sort :start_date, as: _("Start Date") %></th>
      <th class="col-md-1"><%= _("Interval") %></th>
      <th class="col-md-1"><%= _("Active Cycles") %></th>
      <th><%= _("Actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @cycle_plans.each do |cycle_plan| %>
      <tr>
        <td class="ellipsis"><%= link_to cycle_plan.name, hash_for_edit_cycle_plan_path(id: cycle_plan) %></td>
        <td class="ellipsis"><%= cycle_plan.description %></td>
        <td><%= cycle_plan.start_date %></td>
        <td><%= n_("Every one %{singular}", "Every %{count} %{plural}", cycle_plan.interval) % {count: cycle_plan.interval, singular: cycle_plan.units.singularize, plural: cycle_plan.units } %></td>
        <td><%= cycle_plan.cycles.count %></td>
        <td>TODO</td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate_with_info @cycle_plans %>

