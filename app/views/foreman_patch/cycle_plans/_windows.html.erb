<fieldset id="windowPlans" data-url="<%= new_window_plan_path %>">
  <%= calendar(@cycle_plan.next_cycle...(@cycle_plan.next_cycle + @cycle_plan.frequency)) do |day| %>
    <% plan_windows(@cycle_plan, day).each do |window| %>
      <div class="event" id="windowPlan<%= window.id %>" data-window-plan-id="<%= window.id %>">
        <div class="ellipsis"><%= "#{window.start_time.strftime('%l:%M %p')} #{window}" %></div>
        <div class="pull-right">
          <button type="button" class="btn btn-default" onclick="edit_window_plan(<%= window.id %>)"><%= _('Edit') %></button>
          <button type="button" class="btn btn-danger" onclick="remove_window_plan(<%= window.id %>)"><%= _('Delete') %></button>
        </div>
      </div>
    <% end %>
  <% end %>
</fieldset>
