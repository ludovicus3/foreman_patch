<% title _("Patch Groups") %>

<% title_actions csv_link, new_link(_("Create Patch Group")) %>

<table class="<%= table_css_classes 'table-fixed' %>">
  <thead>
    <tr>
      <th><%= sort :name, as: _('Name') %></th>
      <th><%= sort :default_window, as: _('Default Window') %></th>
      <th><%= _('Hosts') %></th>
      <th><%= _('Actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td>
          <%= link_to group.name, hash_for_edit_foreman_patch_group_path(id: group.id) %>
        </td>
        <td>
          <%= group.default_window_plan.name %>
        </td>
        <td>
          <%= link_to group.hosts.count, hosts_path(search: %Q[patch_group = "#{group.name}"]) %>
        </td>
        <td>
          <%= action_buttons(
            display_delete_if_authorized(hash_for_foreman_patch_group_path(id: group.id).merge(auth_object: group, authorizer: authorizer), data: { confirm: _("Delete patch group, %s?") % group.name })) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate_with_info @groups %>

